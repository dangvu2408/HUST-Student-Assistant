<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/button"
    android:gravity="center_vertical"
    android:maxHeight="75dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingClass">

            <TextView
                android:id="@+id/coursenamema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giải tích I - MI1111"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/sfpro_semibold" />

        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tinchiqtck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số TC: 4 - Điểm QT: 9.0 - Điểm CK: 9.0"
                    android:fontFamily="@font/sfpro_regular"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:background="#BFBFC2"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/alphabet"
            android:textSize="24sp"
            android:text="A"
            android:gravity="center"
            android:fontFamily="@font/linh_avantgarde_bold"
            android:textColor="#000000"/>
    </LinearLayout>
</LinearLayout>