<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_tkb"
    android:id="@+id/relavive">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/startTime"
                android:text="00h00"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:fontFamily="@font/sfpro_regular"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/down"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/endTime"
                android:text="00h00"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:fontFamily="@font/sfpro_regular"/>
        </LinearLayout>
        <TextView
            android:layout_width="2dp"
            android:layout_height="75dp"
            android:padding="5dp"
            android:background="#BFBFC2"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/classinfo"
                    android:text="ET2100 - Cấu trúc dữ liệu và giải thuật - 150091"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_regular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="12dp"
                    android:src="@drawable/dot"
                    android:paddingRight="5dp"
                    android:id="@+id/dotRed"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phonghoc"
                    android:text="Sáng thứ 4, Điện tử-K67S, D8-107"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_regular"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/forwardicon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>