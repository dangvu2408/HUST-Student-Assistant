<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AppCompat.MainActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp">
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:id="@+id/btnsetting"
            android:elevation="1dp"
            android:src="@drawable/settingicon"
            android:background="@color/colorPrimary"
            android:layout_margin="12dp"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/mytextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow"
            android:fontFamily="@font/utm_nokia"
            android:gravity="center|top"
            android:padding="16dp"
            android:text="HUST"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/myimage"
        android:src="@drawable/hust"
        android:elevation="1dp"
        android:layout_width="39dp"
        android:layout_height="57dp"
        android:layout_margin="20dp" />


    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/roundedbottomnav"
        app:itemTextAppearanceActive="@style/Widget.BottomNavigationView"
        app:itemTextAppearanceInactive="@style/Widget.BottomNavigationView"
        app:itemIconTint="@color/nav_color"
        app:itemTextColor="@color/nav_color"
        app:itemIconSize="20dp"
        app:itemBackground="@android:color/transparent"
        app:menu="@menu/menu" />
</RelativeLayout>