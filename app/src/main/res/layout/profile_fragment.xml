<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="50dp"
    android:paddingBottom="72dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:scrollbars="none"
    android:id="@+id/profile_frag"
    tools:context=".Fragment.Profile_Fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:elevation="15dp"
            android:layout_marginBottom="10dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_shadow">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/avt0" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="90dp">
                        <TextView
                            android:id="@+id/namestudent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:paddingTop="15dp"
                            android:text="Đặng Quang Vũ"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingRight="5dp"/>
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:background="#BFBFC2"
                            android:paddingBottom="-5dp"/>
                        <TextView
                            android:id="@+id/idstudent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:paddingTop="15dp"
                            android:text="20223830"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email: "
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:fontFamily="sans-serif"
                            android:paddingTop="40dp"
                            android:paddingLeft="90dp"/>
                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vu.DQ223830@sis.hust.edu.vn"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:fontFamily="sans-serif"
                            android:paddingTop="40dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/student_info"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif"
            android:text="Thông tin sinh viên"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/class_info"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif"
            android:text="Lớp sinh viên"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/toeic"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif"
            android:text="Điểm TOEIC"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/newest_score"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif"
            android:text="Tra cứu nhập điểm kì mới nhất"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/hust_map"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif"
            android:text="Bản đồ Bách Khoa Hà Nội"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@drawable/button"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f3eded"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/signout"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:text="Đăng xuất"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:background="@drawable/log_out_button"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/syncdata"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:text="Đồng bộ dữ liệu"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:background="@drawable/log_out_button"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="HUST Student Assistant - Phiên bản 1.0.0"
            android:textColor="#414040"
            android:textSize="12sp"
            android:textAlignment="center"/>
    </LinearLayout>



    <!-- TODO: Update blank fragment layout -->




</LinearLayout>